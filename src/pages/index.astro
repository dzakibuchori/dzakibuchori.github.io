---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to My Portfolio">
  <section class="py-20">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-6">
        Hi, I'm <span class="text-purple-600 dark:text-purple-400">Your Name</span>
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
        Software Engineer specializing in building exceptional digital experiences.
      </p>
      <div class="flex justify-center space-x-4">
        <a href="/projects" class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-colors">
          View Projects
        </a>
        <a href="/contact" class="border border-purple-600 text-purple-600 px-6 py-3 rounded-lg hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-colors">
          Contact Me
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-12">
        Featured Projects
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Project Card 1 -->
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg overflow-hidden">
          <img src="/project1.jpg" alt="Project 1" class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Project Name</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Brief description of the project and its key features.
            </p>
            <a href="/projects/project-1" class="text-purple-600 dark:text-purple-400 hover:underline">
              Learn More →
            </a>
          </div>
        </div>

        <!-- Project Card 2 -->
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg overflow-hidden">
          <img src="/project2.jpg" alt="Project 2" class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Project Name</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Brief description of the project and its key features.
            </p>
            <a href="/projects/project-2" class="text-purple-600 dark:text-purple-400 hover:underline">
              Learn More →
            </a>
          </div>
        </div>

        <!-- Project Card 3 -->
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg overflow-hidden">
          <img src="/project3.jpg" alt="Project 3" class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Project Name</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Brief description of the project and its key features.
            </p>
            <a href="/projects/project-3" class="text-purple-600 dark:text-purple-400 hover:underline">
              Learn More →
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-12">
        Latest Blog Posts
      </h2>
      <div class="space-y-8">
        <!-- Blog Post 1 -->
        <article class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-6">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
            <a href="/blog/post-1" class="hover:text-purple-600 dark:hover:text-purple-400">
              Blog Post Title
            </a>
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Brief excerpt from the blog post...
          </p>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
            <time datetime="2024-01-01">January 1, 2024</time>
            <span class="mx-2">•</span>
            <span>5 min read</span>
          </div>
        </article>

        <!-- Blog Post 2 -->
        <article class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-6">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
            <a href="/blog/post-2" class="hover:text-purple-600 dark:hover:text-purple-400">
              Blog Post Title
            </a>
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Brief excerpt from the blog post...
          </p>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
            <time datetime="2024-01-01">January 1, 2024</time>
            <span class="mx-2">•</span>
            <span>5 min read</span>
          </div>
        </article>
      </div>
    </div>
  </section>
</Layout>
