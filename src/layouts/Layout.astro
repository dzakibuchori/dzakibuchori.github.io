<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <header class="fixed w-full z-50">
      <nav class="glass mx-auto px-4 py-4 m-4 rounded-xl">
        <div class="flex justify-between items-center">
          <a href="/" class="text-xl font-bold text-blue-100">Dzaki Buchori</a>
          <div class="hidden md:flex space-x-6">
            <a href="/" class="text-blue-100 hover:text-white transition-colors">Home</a>
            <a href="/about" class="text-blue-100 hover:text-white transition-colors">About</a>
            <a href="/resume" class="text-blue-100 hover:text-white transition-colors">Resume</a>
            <a href="/projects" class="text-blue-100 hover:text-white transition-colors">Projects</a>
            <a href="/blog" class="text-blue-100 hover:text-white transition-colors">Blog</a>
          </div>
          <button class="md:hidden text-blue-100" id="mobile-menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <main class="container mx-auto px-4 pt-24 pb-12">
